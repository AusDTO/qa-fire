- breadcrumb :project, @project

%h1= project.repository

- if @project.user
  %p
    Owned by: #{@project.user.username}

= link_to('Edit project', edit_project_path(@project), role: :button)

%h2 Deploys

= link_to 'Create manual deploy', new_project_deploy_path(@project)
%h3 Managed by people

%ul
  - if @manual_deploys.blank?
    No deploys created manually
  - else
    - manual_deploys.each do |deploy|
      %li= link_to(deploy.full_name, deploy.url)

%h3 Managed by GitHub

%ul
  - if @github_deploys.blank?
    No deploys from pull requests
  - else
    - github_deploys.each do |deploy|
      %li= link_to(deploy.full_name, deploy.url)
